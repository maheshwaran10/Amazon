<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.ThirdActivity"
    android:padding="20dp"
    android:background="#791DDC8A"
    android:orientation="vertical">
    <TextView
        android:text="what is a capital City of TamilNadu?"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <RadioGroup
        android:id="@+id/district"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/chennai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chennai"
            android:textSize="20dp"/>


        <RadioButton
            android:id="@+id/madurai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="madurai"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/kovai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kovai"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/thirunelvelii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="thirunelveli"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/kumbakonam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kumbakonam"
            android:textSize="20dp"/>





    </RadioGroup>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:backgroundTint="@color/teal_700"/>

</LinearLayout>

